<!-- Hero Section -->
<style>
  @media (max-width: 500px) {
    .hero-container { flex-direction: column !important; }
    .hero-text { text-align: left !important; }
    .hero-buttons { justify-content: center !important; }
    .hero-image { justify-content: center !important; }
  }
  @media (min-width: 501px) and (max-width: 1023px) {
    .hero-container { flex-direction: row !important; }
    .hero-text { text-align: left !important; }
    .hero-buttons { justify-content: flex-start !important; }
    .hero-image { justify-content: flex-end !important; }
  }
  @media (min-width: 1024px) {
    .hero-container { flex-direction: row !important; }
    .hero-text { text-align: center !important; }
    .hero-buttons { justify-content: center !important; }
    .hero-image { justify-content: flex-end !important; }
  }
</style>
