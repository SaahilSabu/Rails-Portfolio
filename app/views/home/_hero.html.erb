    <!-- LEFT: Text Content 70% -->
    <div class="hero-text flex-[7] w-full lg:flex-[7] px-4 sm:px-6 md:px-8 lg:px-10">
      <h1 class="text-6xl sm:text-7xl md:text-8xl lg:text-9xl font-black mb-3 sm:mb-4" style="background: linear-gradient(to right, #2563eb, #9333ea, #db2777); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-size: clamp(3rem, 8vw, 8rem); font-weight: 900; letter-spacing: -0.02em;">
